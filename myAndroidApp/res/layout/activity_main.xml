            </TextView>
            
            <TextView  
                android:id="@+id/TimeVal"  
                android:text="  08:00 - 17:00 "  
                android:textStyle="bold"  
                android:typeface="serif"
                android:textColor="#FFF">
            </TextView>
  
        </TableRow>
             
            <TableRow  
            	android:id="@+id/tableRow1"  
